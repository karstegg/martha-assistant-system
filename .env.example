# Environment Configuration Example
# Copy this file to .env.local and update with your values

# Application Environment
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=0.1.0

# Feature Flags
REACT_APP_CLAUDE_API_ENABLED=true
REACT_APP_QUICK_CAPTURE_ENABLED=true
REACT_APP_OFFLINE_MODE_ENABLED=true
REACT_APP_DEBUG_MODE=true
REACT_APP_ANALYTICS_ENABLED=false

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=52428800
REACT_APP_SUPPORTED_FORMATS=image/*,audio/*,video/*,.pdf,.doc,.docx,.txt,.xlsx,.xls
REACT_APP_MAX_FILES_PER_ENTRY=10

# AI Processing Configuration
REACT_APP_CLAUDE_MODEL=claude-3-sonnet-20240229
REACT_APP_PROCESSING_TIMEOUT=30000
REACT_APP_CONFIDENCE_THRESHOLD=0.7

# Storage Configuration
REACT_APP_STORAGE_TYPE=local
REACT_APP_DRIVE_INTEGRATION=false
REACT_APP_MANIFEST_BACKUP_INTERVAL=300000

# UI Configuration
REACT_APP_THEME=light
REACT_APP_ANIMATIONS_ENABLED=true
REACT_APP_REDUCED_MOTION=false
REACT_APP_HIGH_CONTRAST=false

# PWA Configuration
REACT_APP_PWA_ENABLED=true
REACT_APP_OFFLINE_CACHE_DURATION=86400000
REACT_APP_BACKGROUND_SYNC=true

# Analytics & Monitoring
REACT_APP_SENTRY_DSN=
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_HOTJAR_ID=

# External Service URLs (for production)
REACT_APP_API_BASE_URL=https://api.martha-assistant.com
REACT_APP_CDN_URL=https://cdn.martha-assistant.com
REACT_APP_WEBSOCKET_URL=wss://ws.martha-assistant.com

# Development Tools
REACT_APP_MOCK_API=false
REACT_APP_SHOW_DEV_TOOLS=true
REACT_APP_PERFORMANCE_MONITORING=true

# Security Configuration
REACT_APP_CSP_ENABLED=true
REACT_APP_SECURE_HEADERS=true
REACT_APP_CORS_ORIGINS=https://martha-assistant.com,https://www.martha-assistant.com

# Localization
REACT_APP_DEFAULT_LOCALE=en-US
REACT_APP_SUPPORTED_LOCALES=en-US,en-GB,es-ES,fr-FR
REACT_APP_TIMEZONE=UTC

# Field-Specific Configuration
REACT_APP_GPS_TRACKING=true
REACT_APP_EQUIPMENT_DATABASE=false
REACT_APP_SAFETY_COMPLIANCE=true
REACT_APP_MAINTENANCE_INTEGRATION=false

# Notification Configuration
REACT_APP_PUSH_NOTIFICATIONS=true
REACT_APP_EMAIL_NOTIFICATIONS=false
REACT_APP_SMS_NOTIFICATIONS=false

# Integration Configuration
REACT_APP_GOOGLE_WORKSPACE_INTEGRATION=false
REACT_APP_MICROSOFT_365_INTEGRATION=false
REACT_APP_SLACK_INTEGRATION=false
REACT_APP_WHATSAPP_INTEGRATION=false

# Backup and Recovery
REACT_APP_AUTO_BACKUP=true
REACT_APP_BACKUP_FREQUENCY=daily
REACT_APP_RETENTION_PERIOD=365

# Performance Configuration
REACT_APP_LAZY_LOADING=true
REACT_APP_IMAGE_OPTIMIZATION=true
REACT_APP_CACHING_STRATEGY=aggressive
REACT_APP_PRELOAD_CRITICAL_ASSETS=true

# Accessibility Configuration
REACT_APP_SCREEN_READER_SUPPORT=true
REACT_APP_KEYBOARD_NAVIGATION=true
REACT_APP_VOICE_COMMANDS=false
REACT_APP_GESTURE_SUPPORT=true